generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // ou "postgresql", "mysql", etc. selon votre choix
  url      = env("DATABASE_URL")
}

model Utilisateur {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  password String
  recettes Recette[]
}

model Recette {
  id          Int          @id @default(autoincrement())
  name        String
  description String
  difficulty  Int          @default(1) // Valeur par d√©faut : 1
  time        Int          @default(0) // Temps en minutes
  ingredients Ingredient[]
  etapes      Etape[]
  autheur     Utilisateur  @relation(fields: [authorId], references: [id])
  authorId    Int
}

model Ingredient {
  id        Int     @id @default(autoincrement())
  name      String
  quantity  String
  recette   Recette @relation(fields: [recetteId], references: [id])
  recetteId Int
}

model Etape {
  id          Int     @id @default(autoincrement())
  instruction String
  recette     Recette @relation(fields: [recetteId], references: [id])
  recetteId   Int
}

model Restaurant {
  id           Int      @id @default(1) // Un seul restaurant
  nom          String
  photos       String[]
  localisation String
  horaires     String
}
